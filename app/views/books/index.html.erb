<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Publisher</th>
    <th>Published at</th>
    <th>Isbn</th>
    <th>Blurb</th>
    <th>Page count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.publisher_id %></td>
    <td><%= book.published_at %></td>
    <td><%= book.isbn %></td>
    <td><%= book.blurb %></td>
    <td><%= book.page_count %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

